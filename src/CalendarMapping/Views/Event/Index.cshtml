@using System.Security.Claims

@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#new-event-form").hide();
                $("#new-event-btn").click(function () {
                    $("#new-event-form").toggle();
                });
                $("#new-event-form").submit(function (event) {
                    event.preventDefault();
                    $.ajax ({
                        type: "POST",
                        dataType: "html",
                        data: $(this).serialize(),
                        url: '@Url.Action("Create")',
                        success: function (result) {
                            location.reload();
                        }
                    });
                });
                $(".delete-event").submit(function (event) {
                    event.preventDefault();
                    if (confirm("Are you sure you want to delete this event?")) {
                        $.ajax({
                            type: "POST",
                            dataType: "html",
                            data: $(this).serialize(),
                            url: '@Url.Action("Delete")',
                            success: function (result) {
                                location.reload();
                            }
                        });
                    }
                });
            });
        </script>
    </head>
    <body>
        <h1>Event Manager</h1>
        <br />
        <hr />

        @if (User.Identity.IsAuthenticated)
        {
            <div>
                <button id="new-event-btn">Open/Close New Event Form</button>

                <form action="Create" method="post" id="new-event-form">
                    <h2>Create Event</h2>
                    <label for="description">Description</label>
                    <textarea type="text" name="newDescription"></textarea>

                    <label for="date">Date</label>
                    <input type="date" name="newDate" />

                    <label for="startTime">Start Time</label>
                    <input type="time" name="newStartTime" />
                    <label for="endTime">End Time</label>
                    <input type="time" name="newEndTime" />

                    <label for="address">Address</label>
                    <input type="text" name="newAddress" />
                    <button type="submit">Save</button>
                </form>
            </div>
            <hr />

            <div>
                <h2>Events List</h2>
                <div>
                    @foreach (var individualEvent in Model)
                    {
                        <h5 class="col-xs-6">@individualEvent.Description | @Html.ActionLink("Details", "Detail", new { eventId = individualEvent.Id })</h5>
                        <form action="Delete" method="post" class="col-xs-6 delete-event">
                            <input type="hidden" value=@individualEvent.Id name="eventId" />
                            <button type="submit">Delete</button>
                        </form>
                    }
                </div>
            </div>
            <br />
            <hr />
        }
    </body>
</html>