@using System.Security.Claims

@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="~/Content/js/EventScripts.js" type="text/javascript"></script>
    </head>
    <body>
        <div>
            @Html.Hidden("CreateUrl", Url.Action("Create"))
            @Html.Hidden("DeleteUrl", Url.Action("Delete"))
        </div>

        <h1>Event Manager</h1>
        <br />
        <hr />

        @if (User.Identity.IsAuthenticated)
        {
            <div>
                <button id="new-event-btn" class="btn btn-primary">Open/Close New Event Form</button>

                <form action="Create" method="post" id="new-event-form" class="form-group">
                    <h2>Create Event</h2>
                    <label for="description">Description</label>
                    <textarea type="text" name="newDescription" class="form-control"></textarea>

                    <label for="date">Date</label>
                    <input type="date" name="newDate" class="form-control"/>

                    <label for="startTime">Start Time</label>
                    <input type="time" name="newStartTime" class="form-control"/>
                    <label for="endTime">End Time</label>
                    <input type="time" name="newEndTime" class="form-control"/>

                    <label for="address">Address</label>
                    <input type="text" name="newAddress" class="form-control"/>
                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
            <hr />

            <div>
                <h2>Events List</h2>
                <div>
                    @foreach (var individualEvent in Model)
                    {
                        <h5 class="col-xs-6">@individualEvent.Description | @Html.ActionLink("Details", "Detail", new { eventId = individualEvent.Id })</h5>
                        <form action="Delete" method="post" class="col-xs-6 form-group delete-event">
                            <input type="hidden" value=@individualEvent.Id name="eventId" class="form-control"/>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                </div>
            </div>
            <br />
            <hr />
        }
    </body>
</html>