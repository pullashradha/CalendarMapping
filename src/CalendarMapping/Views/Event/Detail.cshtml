@model CalendarMapping.Models.Event

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="~/Content/js/EventScripts.js" type="text/javascript"></script>
    </head>
    <body>
        <div>
            @Html.Hidden("EditUrl", Url.Action("Edit"))
            @Html.Hidden("DeleteCurrentEventUrl", Url.Action("Delete"))
        </div>

        <h1>@Model.Description</h1>
        <br />
        <hr />

        <div>
            <h2>@Model.Address</h2>
            <h2>@Model.Date.Month/@Model.Date.Day/@Model.Date.Year</h2>
            <h2>@Model.StartTime.Hour:@Model.StartTime.Minute - @Model.EndTime.Hour:@Model.EndTime.Minute</h2>
        </div>
        <br />
        <hr />

        <div>
            <button id="edit-form-btn">Open/Close Edit Event Form</button>
            <h2>Edit Event</h2>
            <form action="Edit" method="post" id="edit-event" class="form-group">
                <label for="description">Description</label>
                <textarea type="text" placeholder=@Model.Description value=@Model.Description name="description" class="form-control"></textarea>

                <label for="date">Date</label>
                <input type="date" placeholder=@Model.Date value=@Model.Date name="date" class="form-control"/>

                <label for="startTime">Start Time</label>
                <input type="time" placeholder=@Model.StartTime value=@Model.StartTime name="startTime" class="form-control"/>
                <label for="endTime">End Time</label>
                <input type="time" placeholder=@Model.EndTime value=@Model.EndTime name="endTime" class="form-control"/>

                <label for="address">Address</label>
                <input type="text" placeholder=@Model.Address value=@Model.Address name="address" class="form-control"/>

                <input type="hidden" value=@Model.Id name="eventId" class="form-control"/>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
        <br />
        <hr />

        <form action="Delete" method="post" class="col-xs-6 form-control delete-event">
            <input type="hidden" value=@Model.Id name="eventId" class="form-control"/>
            <button type="submit" class="btn btn-danger">Delete Event</button>
        </form>
    </body>
</html>

