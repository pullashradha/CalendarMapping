@model CalendarMapping.Models.Event

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#edit-event").hide();
                $("#edit-form-btn").click(function () {
                    $("#edit-event").toggle();
                });
                $("#edit-event").submit(function (event) {
                    event.preventDefault();
                    $.ajax({
                        type: "POST",
                        dataType: "html",
                        data: $(this).serialize(),
                        url: '@Url.Action("Edit")',
                        success: function (result) {
                            location.reload();
                        }
                    });
                });
                $(".delete-event").submit(function (event) {
                    event.preventDefault();
                    if (confirm("Are you sure you want to delete this event?")) {
                        $.ajax({
                            type: "POST",
                            dataType: "html",
                            data: $(this).serialize(),
                            url: '@Url.Action("Delete")',
                            success: function (result) {
                                location.reload();
                            }
                        });
                    }
                });
             });
        </script>
    </head>
    <body>
        <h1>@Model.Description</h1>
        <hr />

        <div>
            <h2>@Model.Address</h2>
            <h2>@Model.Date.Month/@Model.Date.Day/@Model.Date.Year</h2>
            <h2>@Model.StartTime.Hour:@Model.StartTime.Minute - @Model.EndTime.Hour:@Model.EndTime.Minute</h2>
        </div>
        <br />
        <hr />

        <div>
            <button id="edit-form-btn">Open/Close Edit Event Form</button>
            <h2>Edit Event</h2>
            <form action="Edit" method="post" id="edit-event">
                <label for="description">Description</label>
                <textarea type="text" placeholder=@Model.Description value=@Model.Description name="description"></textarea>

                <label for="date">Date</label>
                <input type="date" placeholder=@Model.Date value=@Model.Date name="date" />

                <label for="startTime">Start Time</label>
                <input type="time" placeholder=@Model.StartTime value=@Model.StartTime name="startTime" />
                <label for="endTime">End Time</label>
                <input type="time" placeholder=@Model.EndTime value=@Model.EndTime name="endTime" />

                <label for="address">Address</label>
                <input type="text" placeholder=@Model.Address value=@Model.Address name="address" />

                <input type="hidden" value=@Model.Id name="eventId" />
                <button type="submit">Save</button>
            </form>
        </div>
        <br />
        <hr />

        <form action="Delete" method="post" class="col-xs-6 delete-event">
            <input type="hidden" value=@Model.Id name="eventId" />
            <button type="submit">Delete Event</button>
        </form>
    </body>
</html>

