@model CalendarMapping.Models.Event

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="~/Content/js/EventScripts.js" type="text/javascript"></script>
    </head>
    <body>
        <div>
            @Html.Hidden("EditEventUrl", Url.Action("EditEvent"))
            @Html.Hidden("DeleteCurrentEventUrl", Url.Action("DeleteEvent"))
        </div>

        <h1 class="page-header">@Model.Description</h1>
        <br />

        <div class="more-content">
            <h2>Address: @Model.Address</h2>
            <div class="row">
                <h2 class="col-xs-6">Date: @Model.Date.Month/@Model.Date.Day/@Model.Date.Year</h2>
                <h2 class="col-xs-6">Time: @Model.StartTime.Hour:@Model.StartTime.Minute - @Model.EndTime.Hour:@Model.EndTime.Minute</h2>
            </div>
        </div>
        <br />
        <hr />
        <br />

        <div>
            <button id="edit-form-btn" class="btn btn-primary">Open/Close Edit Event Form</button>
            <form action="EditEvent" method="post" id="edit-event" class="form-group row">
                <h2>Edit Event</h2>
                <label for="description">Description</label>
                <textarea type="text" placeholder=@Model.Description value=@Model.Description name="description" class="form-control"></textarea>

                <div class="col-xs-4">
                    <label for="date">Date</label>
                    <input type="date" placeholder=@Model.Date value=@Model.Date name="date" class="form-control" />
                </div>
                <div class="col-xs-4">
                    <label for="startTime">Start Time</label>
                    <input type="time" placeholder=@Model.StartTime value=@Model.StartTime name="startTime" class="form-control" />
                </div>
                <div class="col-xs-4">
                    <label for="endTime">End Time</label>
                    <input type="time" placeholder=@Model.EndTime value=@Model.EndTime name="endTime" class="form-control" />
                </div>

                <label for="address">Address</label>
                <input type="text" placeholder=@Model.Address value=@Model.Address name="address" class="form-control" />

                <input type="hidden" value=@Model.Id name="eventId" />
                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
        <br />
        <hr />
        <br />

        <form action="DeleteEvent" method="post" class="col-xs-6 delete-event delete-event-details">
            <input type="hidden" value=@Model.Id name="eventId"/>
            <button type="submit" class="btn btn-danger delete-event-btn last-element">Delete Event</button>
        </form>
    </body>
</html>

