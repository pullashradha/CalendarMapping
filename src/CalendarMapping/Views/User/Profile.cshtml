@model CalendarMapping.Models.User

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="~/Content/js/UserScripts.js" type="text/javascript"></script>
    </head>
    <body>
        <div>
            @Html.Hidden("EditUserUrl", Url.Action("EditUser"))
            @Html.Hidden("EditUsernameUrl", Url.Action("EditUsername"))
            @Html.Hidden("ResetPasswordUrl", Url.Action("ResetPassword"))
            @Html.Hidden("DeleteCurrentUserUrl", Url.Action("DeleteCurrentUser"))
        </div>

        <h1 class="page-header">Manage Profile</h1>
        <br />

        <div class="main-content">
            <div class="row user-profile">
                <h2 class="col-xs-6">@Model.FirstName</h2>
                <h2 class="col-xs-6">@Model.LastName</h2>
            </div>
            <div class="row user-profile">
                <h2 class="col-xs-4">@Model.Email</h2>
                <h2 class="col-xs-4">@Model.PhoneNumber</h2>
                <h2 class="col-xs-4">@Model.UserName</h2>
            </div>
        </div>
        <br />
        <hr />
        <br />

        <div>
            <button id="edit-user-btn" class="btn btn-primary">Open/Close Edit Profile Form</button>
            <form action="EditUser" method="post" id="edit-user-form" class="edit-user form-group">
                <h2>Edit Profile</h2>
                <div class="row">
                    <div class="col-xs-6">
                        <label for="firstName">First Name</label>
                        <input value="@Model.FirstName" name="firstName" class="form-control" />
                    </div>
                    <div class="col-xs-6">
                        <label for="lastName">Last Name</label>
                        <input value="@Model.LastName" name="lastName" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <label for="email">Email</label>
                        <input value="@Model.Email" name="email" class="form-control" />
                    </div>
                    <div class="col-xs-6">
                        <label for="phoneNumber">Phone Number</label>
                        <input value="@Model.PhoneNumber" name="phoneNumber" class="form-control" />
                    </div>
                </div>
                <input type="hidden" value=@Model.Id name="userId" class="form-control"/>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
            <br />
            <form action="EditUsername" method="post" id="edit-username" class="edit-user form-group row">
                <h2>Edit Username</h2>
                <div class="col-xs-10">
                    <label for="username">Username</label>
                    <input placeholder="@Model.UserName" name="username" class="form-control" />
                </div>
                <input type="hidden" value=@Model.Id name="userId" class="form-control"/>
                <button type="submit" class="btn btn-success col-xs-2">Save</button>
            </form>
        </div>
        <br />
        <hr />

        <div>
            <form action="ResetPassword" method="post" id="reset-password-form" class="form-group row">
                <h2>Reset Password</h2>
                <div class="col-xs-5">
                    <label>New Password</label>
                    <input type="password" name="newPassword" class="form-control" />
                </div>
                <div class="col-xs-5">
                    <label>Confirm Password</label>
                    <input type="password" name="confirmPassword" class="form-control" />
                </div>
                <input type="hidden" value=@Model.Id name="userId" />
                <div class="col-xs-2">
                    <button type="submit" class="btn btn-success">Change Password</button>
                </div>
            </form>
        </div>
        <br />
        <hr />

        <div>
            <form action="DeleteCurrentUser" method="post" id="delete-user" class="col-xs-6 form-group">
                <input type="hidden" value=@Model.Id name="userId" class="form-control"/>
                <button type="submit" class="btn btn-danger delete-account-btn last-element">Delete Account</button>
            </form>
        </div>
    </body>
</html>

