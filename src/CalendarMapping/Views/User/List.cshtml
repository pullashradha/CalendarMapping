@model IEnumerable<CalendarMapping.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#site-boss-list").hide();
                $("#site-boss").click(function () {
                    $("#site-boss-list").toggle();
                });
            });
        </script>
    </head>
    <body>
        <h1>User Manager</h1>
        <br />
        <hr />

        <div>
            <h2>Users List</h2>
            <ul>
                @foreach (var user in Model)
                {
                    <li>@user.UserName</li>
                }
            </ul>
        </div>
        <br />
        <hr />

        <div>
            <h2>View Users By Role</h2>
            <div>
                <h3 id="site-boss"><a>Site Boss</a></h3>
                <ul id="site-boss-list">
                    @*Actually only lists currently logged in user, not all...*@
                    @if (User.IsInRole("SiteBoss"))
                    {
                        <li>@User.Identity.Name</li>
                    }
                </ul>
            </div>
        </div>
    </body>
</html>

