@model CalendarMapping.Models.Calendar

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="~/Content/js/CalendarScripts.js" type="text/javascript"></script>
    </head>
    <body>
        <div>
            @Html.Hidden("CreateEventUrl", Url.Action("Create", "Event"))
        </div>

        <h1 class="page-header">@Model.Name</h1>
        <br />

        <button class="btn btn-primary" id="create-event-view">Create New Event</button>
        <button class="btn btn-primary" id="close-event-view">Close New Event Form</button>
        <div id="show-new-event-form">
            <input type="hidden" value=@Model.Id name="calendarId"/>
        </div>
        <br />
        <hr />
    </body>
</html>
